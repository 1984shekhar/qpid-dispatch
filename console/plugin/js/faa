##
## Container - Attributes related to the AMQP container.
##
container {
    containerName:      R.1-container
}

##
## Router - Tracks peer routers and computes routes to destinations.
##
router {
    name:               R.1
    mode:               interior
}

##
## Log - Configure logging for a particular module. You can use the `UPDATE` operation to change log settings while the router is running.
##
log {
    enable:             default
    module:             DEFAULT
}

##
## Listener - Listens for incoming connections to the router.
##
listener {
    port:               20103
    sslProfile:         sslProfile
}

##
## Ssl Profile - Attributes for setting TLS/SSL configuration for connections. These fields are shared by listener and connector.
##
sslProfile {
    name:               sslProfile
}

##
## Connector - Establishes an outgoing connection from the router.
##
connector {
    allowRedirect:      false
    role:               inter-router
    port:               20102
    addr:               0.0.0.0
    sslProfile:         sslProfile
}

